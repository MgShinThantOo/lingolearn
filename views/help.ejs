    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="js/all.js"></script>
    <script>
        let inbox = document.querySelector('#inbox');
            outbox = document.querySelector('#outbox'),
            inboxContainter = document.querySelector('.inbox-containter'),
            outboxContainer = document.querySelector('.outbox-container');

            inbox.addEventListener('click',()=>{
                inboxContainter.classList.remove('d-none')
                inbox.classList.add('underline')
                outbox.classList.remove('underline')
                outboxContainer.classList.add('d-none')
            })
            outbox.addEventListener('click',()=>{
                outboxContainer.classList.remove('d-none')
                outbox.classList.add('underline')
                inbox.classList.remove('underline')
                inboxContainter.classList.add('d-none')
            })

        let sendMessage = document.querySelector('#send_message'),
        messageBox = document.querySelector('#message_box'),
        cancelBtn = document.querySelector('#cancel_btn');

        sendMessage.addEventListener('click', () => {
            messageBox.classList.remove('d-none');
        });

        cancelBtn.addEventListener('click', () => {
            messageBox.classList.add('d-none');
        })
    </script>
