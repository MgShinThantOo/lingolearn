<%- include('partials/header'); %>
<link rel="stylesheet" href="css/setting.css">

</head>
<body>
    
    <section class="main">

        <%- include('partials/menu_bar'); %>

        <!---------------------------- content  ----------------------------------------->
        <article class="content report-content min-vh-100">
            <h5 class="">Reports</h5>
            <div class="d-flex flex-wrap justify-content-end align-items-center mt-4">
                <div class="mt">
                    <input type="file" class="d-none" id="filepicker">
                    <div class="bg-white rounded shadow-sm d-flex justify-content-between align-items-center">
                        <div class="px-4"><small class="" id="output">CSV</small></div>
                        <div class="btn btn-sm btn-warning" id="export">Export</div>
                    </div>
                </div>
            </div>
            <div class="table-container mt-3 py-3 px-2 bg-white shadow-sm">
                <table id="example" class="display bg-white" style="width:100%">
                    <thead>
                        <tr>
                            <th>Learner Name</th>
                            <th>Learner Code</th>
                            <th>Course</th>
                            <th>Progress</th>
                            <th>Commenced</th>
                            <th>Time Spent</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Learner Name</td>
                            <td>RTHBV09</td>
                            <td>LingoLearn Course 1</td>
                            <td>
                                <div class="progress" style="height: 15px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 75%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><small>75%</small></div>
                                </div>
                            </td>
                            <td>29/3/2023</td>
                            <td>1:30</td>
                        </tr>
                        <tr>
                            <td>Learner Name</td>
                            <td>RTHBV09</td>
                            <td>LingoLearn Course 2</td>
                            <td>
                                <div class="progress" style="height: 15px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 50%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><small>50%</small></div>
                                </div>
                            </td>
                            <td>29/3/2023</td>
                            <td>1:00</td>
                        </tr>
                        <tr>
                            <td>Learner Name</td>
                            <td>RTHBV09</td>
                            <td>LingoLearn Course 1</td>
                            <td>
                                <div class="progress" style="height: 15px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 75%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><small>75%</small></div>
                                </div>
                            </td>
                            <td>29/3/2023</td>
                            <td>1:20</td>
                        </tr>
                        <tr>
                            <td>Learner Name</td>
                            <td>RTHBV09</td>
                            <td>LingoLearn Course 2</td>
                            <td>
                                <div class="progress" style="height: 15px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><small>25%</small></div>
                                </div>
                            </td>
                            <td>29/3/2023</td>
                            <td>0:50</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </article>

        <%- include('partials/footer'); %>

    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js" integrity="sha512-pumBsjNRGGqkPzKHndZMaAG+bir374sORyzM3uulLV14lN5LyykqNk8eEeUlUkB3U0M4FApyaHraT65ihJhDpQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="js/all.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });

        const output = document.getElementById("output");
        const filepicker = document.getElementById("filepicker");
        const exportBtn = document.getElementById("export");

        exportBtn.addEventListener("click", () => filepicker.click())
        filepicker.addEventListener("change", (event) => {
            const files = event.target.files;
            output.textContent = "";

            for (const file of files) {
                output.innerHTML = file.name;
            }
        });
    </script>
</body>
</html>